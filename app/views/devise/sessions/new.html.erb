<div class="login">
    <div class="login_title">ログイン</div>
    <br>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, class:"form" %>
      </div>
      <div class="field">
        <%= f.label :password, class:"form-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class:"form" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Log in", class:"login_btn" %>
      </div>
    <% end %>
</div>