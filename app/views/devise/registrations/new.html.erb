<div class="contents row">
  <div class="container">
    <h2>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class:"input-default", placeholder:"例) hanako", autofocus: true %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", placeholder:"例) aaaaa@mail.com" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上/半角/英数字)
        <% end %><br />
        <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字", autocomplete: "off" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力してください", autocomplete: "off" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">生年月日</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "年　", "月　") + "日" %>
        </div>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          年齢
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          パーソナルカラー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:personal_color_id, PersonalColor.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          肌の色
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:skin_color_id, SkinColor.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          肌タイプ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:skin_type_id, SkinType.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          顔タイプ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:face_type_id, FaceType.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          メイク傾向
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:makeup_type_id, MakeupType.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>
  </div>
</div>